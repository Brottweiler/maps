<?xml version="1.0"?>
<map proto="1.4.0">
<name>Trench Warfare</name>
<version>0.1</version>
<objective>Be the team with the least amount of deaths after 10 minutes.</objective>
<authors>
    <author uuid="1379cb6e-f291-4498-9807-e636f9674ac0"/> <!-- SH4D0W_HAWK -->
</authors>
<contributors>
    <contributor uuid="6968cbde-c2b7-479c-a8da-f33f109f013b" contribution="XML"/> <!-- Brottweiler -->
</contributors>
<score>
    <kills>1</kills>
    <deaths>1</deaths>
</score>
<time>10m</time>
<rules>
    <rule>Switching/exchanging classses or items within a class is illegal.</rule>
</rules>
<hunger>
    <depletion>off</depletion>
</hunger>
<timelock>on</timelock>
<teams>
    <team id="blues" color="blue" max="20" show-name-tags="allies">Blue</team>
    <team id="reds" color="dark red" max="20" show-name-tags="allies">Red</team>
</teams>
<spawns> <!-- Not changed yet -->
    <spawn team="blues">
        <regions yaw="90">
            <cuboid min="-62, 65, -1" max="-65, 65, 3"/>
        </regions>
    </spawn>
    <spawn team="reds">
        <regions yaw="-90">
            <cuboid min="62, 65, 1" max="65, 65, -3"/>
        </regions>
    </spawn>
    <default>
        <regions yaw="0">
            <cylinder base="0, 91, -60" radius="3" height="1"/>
        </regions>
    </default>
</spawns>
<classes family="offensive">
    <class name="Soldier" default="true" description="Basic infantry equipped with medium armor and weapon." icon="iron sword">
        <kit>
            <item slot="0">iron sword</item>
            <item slot="1" amount="16">egg</item>
            <item slot="2" amount="5">grilled pork</item>
            <helmet material="diamond helmet"/>
            <chestplate material="iron chestplate"/>
            <leggings material="iron leggings"/>
            <boots material="iron boots"/>
        </kit>
    </class>
</classes>
<filters>
    <team id="only-red">reds</team>
    <team id="only-blue">blues</team>
    <any id="only-tnt">
        <material>tnt</material>
    </any>
    <not id="break-restrictions"> <!--Deny breaking stone brick and iron objects-->
        <any>
            <material>iron block</material>
            <material damage="5">step</material>
            <material>redstone wire</material>
            <material>wall sign</material>
            <material>stone plate</material>
            <material>smooth brick</material>
            <material>iron fence</material>
            <material>smooth stairs</material>
            <material>wood button</material>
            <material>tnt</material>
        </any>
    </not>
</filters>
<regions>
    <negative id="playable-inverse">
        <union id="playable">
            <rectangle id="main-area" min="59,-10" max="-60,11"/>
            <union id="bases">
                <union id="red-base-area">
                    <rectangle id="red-base" min="60,-17" max="76,18"/>
                    <rectangle id="red-side-right" min="59,-11" max="44,-17"/>
                    <rectangle id="red-side-left" min="59,12" max="44,18"/>
                </union>
                <union id="blue-base-area">
                    <rectangle id="blue-base" min="-61,18" max="-77,-17"/>
                    <rectangle id="blue-side-left" min="-60,12" max="-45,18"/>
                    <rectangle id="blue-side-right" min="-60,-11" max="-45,-17"/>
                </union>
            </union>
        </union>
    </negative>
    <union id="cannons">
            <!-- Fixed -->
        <cuboid id="red-cannon1" min="69,74,6" max="64,78,7"/>
            <!-- Needs to be tweaked -->
        <cuboid id="red-cannon2" min="73,74,3" max="63,78,-1"/>
        <cuboid id="red-cannon3" min="71,74,-3" max="65,78,-6"/>
            <!-- Not fixed yet -->
        <cuboid id="blue-cannon1" min="-71,74,-8" max="-65,78,-5"/>
        <cuboid id="blue-cannon2" min="-73,74,-3" max="-63,78,1"/>
        <cuboid id="blue-cannon3" min="-71,74,3" max="-65,78,6"/>
    </union>
    <apply enter="only-red" region="red-base-area" message="Only red can enter this area"/>
    <apply enter="only-blue" region="blue-base-area" message="Only blue can enter this area"/>
    <apply block="only-tnt" region="cannons"/>
    <apply block="never" region="bases"/>
    <apply block="break-restrictions" region="main-area"/>
    <apply block="never" region="playable-inverse"/>
</regions>
<tnt>
    <blockdamage>off</blockdamage>
</tnt>
<itemremove>
    <item>potion</item>
    <item>leather helmet</item>
    <item>leather chestplate</item>
    <item>leather leggings</item>
    <item>leather boots</item>
    <item>gold helmet</item>
    <item>chainmail leggings</item>
    <item>iron helmet</item>
    <item>iron chestplate</item>
    <item>iron leggings</item>
    <item>iron boots</item>
    <item>diamond chestplate</item>
    <item>stone sword</item>
    <item>iron sword</item>
    <item>diamond sword</item>
    <item>bow</item>
    <item>arrow</item>
    <item>iron axe</item>
    <item>stone axe</item>
    <item>string</item>
    <item>shears</item>
    <item>flint and steel</item>
    <item>flint</item>
    <item>glass bottle</item>
    <item>stick</item>
    <item>torch</item>
    <item>painting</item>
    <item>dirt</item>
    <item>wood</item>
    <item>leaves</item>
    <item>ladder</item>
    <item>wool</item>
    <item>log</item>
    <item>tnt</item>
    <item>web</item>
    <item>string</item>
    <item>golden apple</item>
    <item>gravel</item>
    <item>flint</item>
    <item>soul sand</item>
</itemremove>
<killreward>
    <item name="Health Kit">golden apple</item>
</killreward>
</map>
